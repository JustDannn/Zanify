APP_NAME=Zanify
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# Option 1: Local MySQL (untuk development sendiri)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=db_zanify
# DB_USERNAME=root
# DB_PASSWORD=password

# Option 2: Azure MySQL (untuk tim - RECOMMENDED)
DB_CONNECTION=mysql
DB_HOST=your-server-name.mysql.database.azure.com
DB_PORT=3306
DB_DATABASE=zanify
DB_USERNAME=your-username
DB_PASSWORD=your-password
DB_SSLMODE=require
MYSQL_ATTR_SSL_CA=

# ============================================================

SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=public
QUEUE_CONNECTION=database

CACHE_STORE=database

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

ADMIN_KEY=

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

ADMIN_EMAIL=admin@zanify.com
ADMIN_PASSWORD=supersecret123

# ============================================================
# AZURE BLOB STORAGE (untuk file musik)
# ============================================================
AZURE_CONNECTION_STRING="your-azure-connection-string"
AZURE_STORAGE_CONTAINER=music
AZURE_STORAGE_ENDPOINT=https://your-account.blob.core.windows.net/
